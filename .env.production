# Production Environment Template
APP_NAME="Flower Shop"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=

# Database - Set via Railway Environment Variables
DB_CONNECTION=mysql
DB_HOST=
DB_PORT=3306
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=

# Security
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_SECURE_COOKIE=true

# Cache - Use database instead of Redis for simplicity
CACHE_DRIVER=database
CACHE_STORE=database

# Queue - Use database instead of Redis
QUEUE_CONNECTION=database

# Logging - Reduced verbosity for production
LOG_CHANNEL=stack
LOG_LEVEL=error
LOG_DEPRECATIONS_CHANNEL=null

# Mail
MAIL_MAILER=smtp

# Disable debug features
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false

# File Storage
FILESYSTEM_DISK=local

# Rate limiting
THROTTLE_REQUESTS=60